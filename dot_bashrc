# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]; then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions
if [ -d ~/.bashrc.d ]; then
    for rc in ~/.bashrc.d/*; do
        if [ -f "$rc" ]; then
            . "$rc"
        fi
    done
fi
unset rc

export PATH="$PATH:~/.cargo/bin"
# xremap bash completion
#eval "$(xremap --completions bash)"
# aliases
alias cls=clear
alias ff=fastfetch
alias steam="flatpak run com.valvesoftware.Steam"
alias fup="sh ~/.flatpak/flatpak-sync-backup-gen.sh && chezmoi re-add ~/.flatpak/flatpak-sync-backup.sh"
alias fed="nano ~/.flatpak/flatpak-sync-backup-gen.sh && chezmoi re-add ~/.flatpak/flatpak-sync-backup-gen.sh"
alias rced="nano ~/.bashrc && chezmoi re-add ~/.bashrc && source ~/.bashrc"
alias cz=chezmoi
alias la="ls -al"
alias ll="ls -al"
alias gup="git add . && git commit -m "update" && git push"
